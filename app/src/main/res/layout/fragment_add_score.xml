<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_score_wrapper"
    style="@style/GameCardStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:rotation="180"
                android:src="@drawable/ic_arrow_right_large"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/next_arrow"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right_large"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-12dp"
                android:layout_marginStart="-12dp"
                android:layout_toEndOf="@+id/back_arrow"
                android:layout_toStartOf="@+id/next_arrow"
                android:gravity="center"
                android:text="First click the player who scored, than choose up by 2 assists and go next."
                android:textColor="@android:color/black" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_player_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>